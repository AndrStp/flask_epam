# Example of .env file. Don't make any change on this file directly
# Firstly, run `cp dotenv .env` and then fill in the missing values

# Provide the app name
FLASK_APP=app

# Fill in either 'production' or 'development' (without qoutes) 
FLASK_ENV=development

# Set up your secret key
SECRET_KEY=your_secrert_key

# Fill in your DB info
DB_USER=username
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres

# Fill in mail credentials
MAIL_SERVER=smtp.googlemail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=example@gmail.com
MAIL_PASSWORD=password

# MISCELLANEOUS
FLASK_MAIL_SUBJECT_PREFIX=EDU FLASK